{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "custom-base-image",
        "annotations": {
            "description": "Application template for the Custom Base Image",
            "iconClass": "icon-jboss",
            "tags": "javaee,java,builder"
        }
    },
    "objects": [
        {
           "kind": "ImageStream",
           "apiVersion": "v1",
           "metadata": {
              "name": "base-centos"
           },
           "spec": {
              "dockerImageRepository": "openshift/base-centos7"
           }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "source": {
                    "type": "Binary",
                    "binary": {
                        "asFile": ""
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "base-centos:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                    }
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "The name for the application.",
            "value": "custom-base-image",
            "required": true
        }
    ],
    "labels": {
        "template": "custom-base-image"
    }
}